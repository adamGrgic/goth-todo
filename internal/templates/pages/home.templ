package pages


templ Home() {
    <section>
        <div class="container" style="min-height: 800px;">
            <div id="task-list"
                hx-get="/task/get"
                hx-trigger="load"
                hx-target="#task-list"
                hx-swap="outerHTML">
                <p class="text-gray-400">Loading tasks...</p>
            </div>
        </div>
    </section>
}
